<Window x:Class="VideoClub.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Профиль" Height="150" Width="250" Loaded="Window_Loaded">

    <DockPanel LastChildFill="False" Margin="2">
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Label Content="Ваш страховой фонд:" />
            <Label Grid.Row="1" Content="Вы брали кассету:" />
            <Label Grid.Row="2" Content="Осталось дней:" />

            <Label Name="fund_label" Grid.Column="1" />
            <Label Name="cassette_label" Grid.Row="1" Grid.Column="1" />
            <Label Name="term_label" Grid.Row="2" Grid.Column="1" />
        </Grid>
    </DockPanel>
</Window>